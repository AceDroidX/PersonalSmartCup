<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_set_alarm"
        tools:context="com.github.wangxuxin.personalsmartcup.SetAlarmActivity">

    <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="495dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">

        <TextView
                android:text="设置提醒时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView
                android:text="在"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"
                android:layout_below="@+id/textView7" android:layout_toStartOf="@+id/minEdit"
                android:layout_alignBottom="@+id/minEdit" android:gravity="center"/>
        <EditText
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/minEdit" android:hint="min"
                android:layout_below="@+id/textView7" android:layout_toStartOf="@+id/textView9"
                android:layout_alignBottom="@+id/secEdit" android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat.Small"/>
        <TextView
                android:text="分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="0.02"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textSize="24sp"
                android:layout_below="@+id/textView7" android:layout_toStartOf="@+id/secEdit"
                android:layout_alignBottom="@+id/minEdit" android:gravity="center"/>
        <EditText
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/secEdit"
                android:hint="sec" android:layout_below="@+id/textView7" android:layout_centerHorizontal="true"
                android:gravity="center" style="@style/Base.TextAppearance.AppCompat.Medium"/>
        <TextView
                android:text="秒后提醒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="0.12"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"
                android:layout_below="@+id/textView7" android:layout_toEndOf="@+id/secEdit" android:gravity="center"
                android:layout_alignBottom="@+id/secEdit"/>
        <Button
                android:text="设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/textView8"
                android:layout_alignStart="@+id/textView8" android:id="@+id/setButton"/>
        <Button
                android:text="关闭"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/textView11"
                android:layout_alignEnd="@+id/textView11" android:id="@+id/cancelButton"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
