<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.github.wangxuxin.personalsmartcup.MainActivity">

    <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="495dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="142dp"
                tools:layout_editor_absoluteX="124dp" android:id="@+id/test1" android:text="@string/app_name_chs"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_above="@+id/textView" android:layout_centerHorizontal="true"/>
        <TextView
                android:text="连接状态"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/stateText"
                android:layout_above="@+id/button2" android:layout_centerHorizontal="true"/>
        <Button
                android:text="关于作者"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="279dp"
                tools:layout_editor_absoluteX="148dp" android:id="@+id/aboutMain"
                android:layout_below="@+id/historyButton" android:layout_alignStart="@+id/historyButton"/>
        <Button
                android:text="喝水历史"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="183dp"
                tools:layout_editor_absoluteX="148dp" android:id="@+id/historyButton"
                android:layout_below="@+id/button2" android:layout_alignStart="@+id/button2"/>
        <Button
                android:text="喝水提醒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="231dp"
                tools:layout_editor_absoluteX="148dp" android:id="@+id/button2"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
